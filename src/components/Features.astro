---
// Features Section showcasing AI-powered yoga features
import { getTranslation } from '../lib/i18n';

// Helper function to get translation with dynamic values
const t = (key: string, values: Record<string, string> = {}) => {
  let translation = getTranslation(Astro, key);

  // Replace dynamic values in translations
  Object.entries(values).forEach(([placeholder, value]) => {
    translation = translation.replace(`{${placeholder}}`, value);
  });

  return translation;
};
---

<section id="features" class="py-20 lg:py-32 bg-base-200/30 theme-transition">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="badge badge-outline badge-lg mb-4">
        <span class="flex items-center gap-1">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M11 3a1 1 0 10-2 0v8a1 1 0 001 1h8a1 1 0 100-2h-7V3z"></path>
            <path d="M7 7a1 1 0 00-1 1v8a1 1 0 102 0V8a1 1 0 00-1-1z"></path>
          </svg>
          {t('features.badge')}
        </span>
      </div>
      <h2 class="text-3xl md:text-5xl font-bold mb-4">
        <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
          {t('features.title')}
        </span>
      </h2>
      <p class="text-lg text-base-content/70 leading-relaxed">
        {t('features.subtitle')}
      </p>
    </div>

    <!-- Features Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
      <!-- Feature 1: AI Personalization -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <div class="card-body p-6 lg:p-8">
          <div class="w-16 h-16 bg-gradient-to-br from-primary to-primary/60 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-primary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <h3 class="card-title text-xl mb-3">{t('features.aiTitle')}</h3>
          <p class="text-base-content/70 mb-4">
            {t('features.aiDescription')}
          </p>
          <div class="card-actions">
            <div class="flex flex-wrap gap-2">
              <span class="badge badge-primary badge-outline">{t('features.aiBadge1')}</span>
              <span class="badge badge-secondary badge-outline">{t('features.aiBadge2')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 2: Live Classes -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <div class="card-body p-6 lg:p-8">
          <div class="w-16 h-16 bg-gradient-to-br from-secondary to-secondary/60 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-secondary-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
            </svg>
          </div>
          <h3 class="card-title text-xl mb-3">{t('features.liveTitle')}</h3>
          <p class="text-base-content/70 mb-4">
            {t('features.liveDescription')}
          </p>
          <div class="card-actions">
            <div class="flex flex-wrap gap-2">
              <span class="badge badge-secondary badge-outline">{t('features.liveBadge1')}</span>
              <span class="badge badge-accent badge-outline">{t('features.liveBadge2')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 3: Progress Tracking -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <div class="card-body p-6 lg:p-8">
          <div class="w-16 h-16 bg-gradient-to-br from-accent to-accent/60 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-accent-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <h3 class="card-title text-xl mb-3">{t('features.progressTitle')}</h3>
          <p class="text-base-content/70 mb-4">
            {t('features.progressDescription')}
          </p>
          <div class="card-actions">
            <div class="flex flex-wrap gap-2">
              <span class="badge badge-accent badge-outline">{t('features.progressBadge1')}</span>
              <span class="badge badge-info badge-outline">{t('features.progressBadge2')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 4: Meditation -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <div class="card-body p-6 lg:p-8">
          <div class="w-16 h-16 bg-gradient-to-br from-info to-info/60 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-info-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="card-title text-xl mb-3">{t('features.meditationTitle')}</h3>
          <p class="text-base-content/70 mb-4">
            {t('features.meditationDescription')}
          </p>
          <div class="card-actions">
            <div class="flex flex-wrap gap-2">
              <span class="badge badge-info badge-outline">{t('features.meditationBadge1')}</span>
              <span class="badge badge-success badge-outline">{t('features.meditationBadge2')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 5: Nutrition -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <div class="card-body p-6 lg:p-8">
          <div class="w-16 h-16 bg-gradient-to-br from-success to-success/60 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-success-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="card-title text-xl mb-3">{t('features.nutritionTitle')}</h3>
          <p class="text-base-content/70 mb-4">
            {t('features.nutritionDescription')}
          </p>
          <div class="card-actions">
            <div class="flex flex-wrap gap-2">
              <span class="badge badge-success badge-outline">{t('features.nutritionBadge1')}</span>
              <span class="badge badge-warning badge-outline">{t('features.nutritionBadge2')}</span>
            </div>
          </div>
        </div>
      </div>

      <!-- Feature 6: Community -->
      <div class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 group">
        <div class="card-body p-6 lg:p-8">
          <div class="w-16 h-16 bg-gradient-to-br from-warning to-warning/60 rounded-2xl flex items-center justify-center mb-4 group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-warning-content" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <h3 class="card-title text-xl mb-3">{t('features.communityTitle')}</h3>
          <p class="text-base-content/70 mb-4">
            {t('features.communityDescription')}
          </p>
          <div class="card-actions">
            <div class="flex flex-wrap gap-2">
              <span class="badge badge-warning badge-outline">{t('features.communityBadge1')}</span>
              <span class="badge badge-error badge-outline">{t('features.communityBadge2')}</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Bottom CTA -->
    <div class="text-center mt-16">
      <div class="bg-gradient-to-r from-primary/10 to-secondary/10 rounded-2xl p-8 lg:p-12">
        <h3 class="text-2xl md:text-3xl font-bold mb-4">
          {t('features.ctaTitle')}
        </h3>
        <p class="text-base-content/70 mb-6 max-w-2xl mx-auto">
          {t('features.ctaDescription')}
        </p>
        <button class="btn btn-primary btn-lg">
          {t('features.ctaButton')}
          <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
          </svg>
        </button>
      </div>
    </div>
  </div>
</section>