<script>
  // Tab functionality for class filtering
  function initializeClassFilters() {
    const tabButtons = document.querySelectorAll('.tab-btn');
    const classCards = document.querySelectorAll('.class-card');

    // Filter level mappings for different languages
    const filterMap = {
      'all classes': 'all',
      'alle kurse': 'all',
      'все курсы': 'all',
      'todos los cursos': 'all',
      'tüm kurslar': 'all',
      'beginner': 'beginner',
      'anfänger': 'beginner',
      'начинающий': 'beginner',
      'principiante': 'beginner',
      'başlangıç': 'beginner',
      'intermediate': 'intermediate',
      'mittelstufe': 'intermediate',
      'средний': 'intermediate',
      'intermedio': 'intermediate',
      'orta seviye': 'intermediate',
      'advanced': 'advanced',
      'fortgeschritten': 'advanced',
      'продвинутый': 'advanced',
      'avanzado': 'advanced',
      'ileri seviye': 'advanced',
      'медитация': 'meditation',
      'meditación': 'meditation',
      'meditasyon': 'meditation',
      // Title case versions
      'Anfänger': 'beginner',
      'Principiante': 'beginner',
      'Başlangıç': 'beginner',
      'Mittelstufe': 'intermediate',
      'Intermedio': 'intermediate',
      'Orta seviye': 'intermediate',
      'Fortgeschritten': 'advanced',
      'Avanzado': 'advanced',
      'İleri seviye': 'advanced',
      'Meditación': 'meditation',
      'Meditasyon': 'meditation'
    };

    tabButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        tabButtons.forEach(btn => {
          btn.classList.remove('active', 'btn-primary');
          btn.classList.add('btn-outline');
        });

        // Add active class to clicked button
        button.classList.remove('btn-outline');
        button.classList.add('active', 'btn-primary');

        // Filter classes
        const buttonText = button.textContent.toLowerCase().trim();
        const filterLevel = filterMap[buttonText] || buttonText;
        filterClasses(filterLevel, classCards);
      });
    });
  }

  function filterClasses(level, cards) {
    cards.forEach(card => {
      if (level === 'all') {
        card.style.display = 'block';
        return;
      }

      const cardLevel = card.getAttribute('data-level');
      if (cardLevel === level) {
        card.style.display = 'block';
      } else {
        card.style.display = 'none';
      }
    });
  }

  // Initialize when DOM is loaded
  document.addEventListener('DOMContentLoaded', initializeClassFilters);
</script>

