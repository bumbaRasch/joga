---
// Final Call-to-Action Section with contact form
import { getTranslation } from '../lib/i18n';

const t = (key: string, values: Record<string, string> = {}) => {
  let translation = getTranslation(Astro, key);
  Object.entries(values).forEach(([placeholder, value]) => {
    translation = translation.replace(`{${placeholder}}`, value);
  });
  return translation;
};
---

<section class="py-20 lg:py-32 bg-gradient-to-br from-primary/10 via-secondary/5 to-accent/10 theme-transition">
  <div class="container mx-auto px-4">
    <div class="max-w-4xl mx-auto">
      <!-- Section Header -->
      <div class="text-center mb-12">
        <div class="badge badge-outline badge-lg mb-4">
          <span class="flex items-center gap-1">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z"></path>
            </svg>
            {t('nav.getStarted')}
          </span>
        </div>
        <h2 class="text-3xl md:text-5xl font-bold mb-4">
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            {t('cta.title')}
          </span>
        </h2>
        <p class="text-lg text-base-content/70 leading-relaxed">
          {t('cta.subtitle')}
        </p>
      </div>

      <!-- CTA Form -->
      <div class="card bg-base-100 shadow-2xl">
        <div class="card-body p-8 lg:p-12">
          <form id="cta-form" class="space-y-6">
            <div class="grid md:grid-cols-2 gap-6">
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">{t('cta.firstName')}</span>
                </label>
                <input type="text" placeholder="John" class="input input-bordered w-full" required />
              </div>
              <div class="form-control">
                <label class="label">
                  <span class="label-text font-medium">{t('cta.lastName')}</span>
                </label>
                <input type="text" placeholder="Doe" class="input input-bordered w-full" required />
              </div>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">{t('cta.email')}</span>
              </label>
              <input type="email" placeholder="john@example.com" class="input input-bordered w-full" required />
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">{t('cta.experience')}</span>
              </label>
              <select class="select select-bordered w-full" required>
                <option value="" disabled selected>Select your experience</option>
                <option value="beginner">Complete Beginner</option>
                <option value="some">Some Experience</option>
                <option value="intermediate">Intermediate</option>
                <option value="advanced">Advanced</option>
                <option value="teacher">Yoga Teacher</option>
              </select>
            </div>

            <div class="form-control">
              <label class="label">
                <span class="label-text font-medium">{t('cta.goals')}</span>
              </label>
              <div class="grid grid-cols-2 md:grid-cols-3 gap-3">
                <label class="cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span class="label-text">Stress Relief</span>
                </label>
                <label class="cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span class="label-text">Flexibility</span>
                </label>
                <label class="cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span class="label-text">Weight Loss</span>
                </label>
                <label class="cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span class="label-text">Strength</span>
                </label>
                <label class="cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span class="label-text">Meditation</span>
                </label>
                <label class="cursor-pointer">
                  <input type="checkbox" class="checkbox checkbox-primary mr-2" />
                  <span class="label-text">Better Sleep</span>
                </label>
              </div>
            </div>

            <div class="form-control">
              <label class="cursor-pointer">
                <input type="checkbox" class="checkbox checkbox-primary mr-2" required />
                <span class="label-text" set:html={t('cta.termsAgree', {
                  terms: '<a href="/terms-of-service" class="link link-primary">Terms of Service</a>',
                  privacy: '<a href="/privacy-policy" class="link link-primary">Privacy Policy</a>'
                })}></span>
              </label>
            </div>

            <button type="submit" class="btn btn-primary btn-lg w-full">
              {t('cta.submit')}
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </button>

            <p class="text-sm text-center text-base-content/60">
              No credit card required • Cancel anytime • Full access to all features
            </p>
          </form>
        </div>
      </div>

      <!-- Alternative CTAs -->
      <div class="mt-12 text-center">
        <p class="text-base-content/60 mb-6">Or get started immediately with:</p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button class="btn btn-outline btn-primary" id="download-app-btn">
            <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"></path>
            </svg>
            {t('cta.downloadApp')}
          </button>
          <button class="btn btn-outline btn-secondary" id="browse-classes-btn">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            {t('cta.browseClasses')}
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Footer -->
<footer class="footer footer-center p-10 bg-base-200 text-base-content theme-transition">
  <div class="grid grid-flow-col gap-4">
    <a href="#features" class="link link-hover">{t('footer.about')}</a>
    <a href="#cta-form" class="link link-hover">{t('footer.contact')}</a>
    <a href="/careers" class="link link-hover">{t('footer.careers')}</a>
    <a href="/press-kit" class="link link-hover">{t('footer.pressKit')}</a>
  </div>
  <div>
    <div class="grid grid-flow-col gap-4">
      <!-- Twitter/X -->
      <a href="https://twitter.com/jogawellness" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform duration-200" aria-label="Follow Joga on X (Twitter)">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
          <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
        </svg>
      </a>

      <!-- YouTube -->
      <a href="https://youtube.com/@jogawellness" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform duration-200" aria-label="Subscribe to Joga on YouTube">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"></path>
        </svg>
      </a>

      <!-- Facebook -->
      <a href="https://facebook.com/jogawellness" target="_blank" rel="noopener noreferrer" class="hover:scale-110 transition-transform duration-200" aria-label="Like Joga on Facebook">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="fill-current">
          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"></path>
        </svg>
      </a>
    </div>
  </div>
  <div>
    <p>{t('footer.copyright', { year: new Date().getFullYear() })} {t('footer.rights')}</p>
  </div>
</footer>

